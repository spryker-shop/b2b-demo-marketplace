<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Store\Persistence" package="src.Orm.Zed.Store.Persistence">
    <table name="spy_store" idMethod="native">
        <column name="id_store" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="id_tenant" type="varchar" size="255" required="true" description="Tenant identifier for multi-tenant isolation"/>
        <column name="fk_currency" type="INTEGER" description="Default currency for the store."/>
        <column name="fk_locale" type="INTEGER" description="Default locale of the store."/>
        <column name="name" size="255" type="VARCHAR"/>
        <foreign-key name="spy_store-fk_currency" foreignTable="spy_currency" phpName="DefaultCurrency" refPhpName="StoreDefault">
            <reference local="fk_currency" foreign="id_currency"/>
        </foreign-key>
        <foreign-key name="spy_store-fk_locale" foreignTable="spy_locale" phpName="DefaultLocale" refPhpName="StoreDefault">
            <reference local="fk_locale" foreign="id_locale"/>
        </foreign-key>
        <index name="index-spy_store-fk_currency">
            <index-column name="fk_currency"/>
        </index>
        <index name="index-spy_store-fk_locale">
            <index-column name="fk_locale"/>
        </index>
        <id-method-parameter value="spy_store_pk_seq"/>
        <behavior name="\Spryker\Zed\AclEntity\Persistence\Propel\Behavior\AclEntityBehavior"/>
        <behavior name="event">
            <parameter name="spy_store_all" column="*"/>
        </behavior>
        <behavior name="\Pyz\Zed\TenantBehavior\Persistence\Propel\Behavior\TenantBehavior"/>
    </table>
</database>
