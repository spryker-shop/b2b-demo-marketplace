<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\MerchantProduct\Persistence" package="src.Orm.Zed.MerchantProduct.Persistence">
    <table name="spy_merchant_product_abstract" phpName="SpyMerchantProductAbstract" idMethod="native">
        <column name="id_merchant_product_abstract" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="id_tenant" type="varchar" size="255" required="true" description="Tenant identifier for multi-tenant isolation"/>
        <column name="fk_merchant" required="true" type="INTEGER"/>
        <column name="fk_product_abstract" required="true" type="INTEGER"/>
        <column name="is_shared" type="BOOLEAN" defaultValue="false"/>
        <foreign-key name="spy_merchant_product_abstract-fk_merchant" foreignTable="spy_merchant" phpName="Merchant" onDelete="CASCADE">
            <reference local="fk_merchant" foreign="id_merchant"/>
        </foreign-key>
        <foreign-key name="spy_merchant_product_abstract-fk_product_abstract" foreignTable="spy_product_abstract" phpName="ProductAbstract" onDelete="CASCADE">
            <reference local="fk_product_abstract" foreign="id_product_abstract"/>
        </foreign-key>
        <index name="spy_merchant_product_abstract-index-fk_merchant">
            <index-column name="fk_merchant"/>
        </index>
        <unique name="spy_merchant_product_abstract-unique-fk_product_abstract">
            <unique-column name="fk_product_abstract"/>
        </unique>
        <id-method-parameter value="spy_merchant_product_abstract_pk_seq"/>
        <behavior name="timestampable"/>
        <behavior name="event">
            <parameter name="spy_merchant_product_abstract_all" column="*"/>
        </behavior>
        <behavior name="\Pyz\Zed\TenantBehavior\Persistence\Propel\Behavior\TenantBehavior"/>
    </table>
</database>
