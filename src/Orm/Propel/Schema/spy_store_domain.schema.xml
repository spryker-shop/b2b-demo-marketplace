<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\TenantOnboarding\Persistence" package="src.Orm.Zed.TenantOnboarding.Persistence">

    <table name="spy_store_domain" idMethod="native" identifierQuoting="true">
        <column name="id_store_domain" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="tenant_identifier" type="VARCHAR" size="255" required="true"/>
        <column name="domain_host" type="VARCHAR" size="255" required="true"/>
        <column name="storeName" type="VARCHAR" size="255" required="false"/>

        <behavior name="synchronization">
            <parameter name="resource" value="store_domain"/>
            <parameter name="key_suffix_column" value="domain_host"/>
            <parameter name="store" required="false"/>
            <parameter name="queue_group" value="sync.storage.tenant"/>
        </behavior>

        <unique name="spy_store_domain-tenant_store">
            <unique-column name="tenant_identifier"/>
            <unique-column name="storeName"/>
        </unique>

        <unique name="spy_store_domain-domain_host">
            <unique-column name="domain_host"/>
        </unique>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_store_domain_pk_seq"/>
    </table>

</database>
