<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\WeekdaySchedule\Persistence" package="src.Orm.Zed.WeekdaySchedule.Persistence">
    <table name="spy_weekday_schedule" idMethod="native">
        <column name="tenant_reference" type="varchar" size="255" required="true" description="Tenant identifier for multi-tenant isolation"/>
        <column name="id_weekday_schedule" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="day" required="true" type="ENUM" valueSet="MONDAY, TUESDAY, WEDNESDAY, THURSDAY, FRIDAY, SATURDAY, SUNDAY"/>
        <column name="time_from" type="TIME"/>
        <column name="time_to" type="TIME"/>
        <id-method-parameter value="spy_weekday_schedule_pk_seq"/>
        <behavior name="timestampable"/>
        <behavior name="\Go\Zed\TenantBehavior\Persistence\Propel\Behavior\TenantBehavior"/>
    </table>
    <table name="spy_date_schedule" idMethod="native">
        <column name="id_date_schedule" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="tenant_reference" type="varchar" size="255" required="true" description="Tenant identifier for multi-tenant isolation"/>
        <column name="date" type="DATE" required="true"/>
        <column name="note_glossary_key" type="VARCHAR" size="255"/>
        <column name="time_from" type="TIME"/>
        <column name="time_to" type="TIME"/>
        <behavior name="timestampable"/>
        <behavior name="\Go\Zed\TenantBehavior\Persistence\Propel\Behavior\TenantBehavior"/>
    </table>
</database>
