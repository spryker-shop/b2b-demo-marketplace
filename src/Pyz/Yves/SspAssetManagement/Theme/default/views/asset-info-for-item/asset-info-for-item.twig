{% extends view('asset-info-for-item', '@SprykerFeature:SspAssetManagement') %}

{% block title %}
    <div class="title--h6"><strong>{{ 'ssp_asset_management.assigned_asset' | trans }}:</strong></div>
{% endblock %}

{% block asset %}
    <ul class="list title--h6">
        <li class="list__item ">
            {{ 'ssp_asset_management.asset.name' | trans }}: <a href="{{ path('customer/asset/details', {'reference': data.asset.reference }) }}">{{ data.asset.name }}</a>
        </li>

        {% if data.asset.serialNumber %}
            <li class="list__item">
                {{ 'ssp_asset_management.asset.serial_number' | trans }}: {{ data.asset.serialNumber }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
