{% extends view('details', '@SprykerFeature:SspAssetManagement') %}

{% block customerContent %}
    {{ block('heading') }}
    {{ block('information') }}

    <div class="grid grid--stretch grid--with-gutter">
        {% set colClasses = 'col col--with-gutter col--sm-12 col--xl-6' %}

        <div class="{{ colClasses }}">
            {% if data.asset.sspInquiryCollection and (can('ViewBusinessUnitSspInquiryPermissionPlugin') or can('ViewCompanySspInquiryPermissionPlugin')) %}
                {% widget 'SspInquiryListWidget' args [data.asset.sspInquiryCollection, url('customer/ssp-inquiry', { ssp_asset_reference: data.asset.reference })] only %}{% endwidget %}
            {% endif %}
        </div>
    </div>
{% endblock %}
