{% extends view('file-management-view', '@SprykerFeature:SspFileManagement') %}

{% block filtersToggler %}
    <button class="button button--hollow button--justify-center js-filter-button">
        {% include atom('icon') with {
            modifiers: ['filter'],
            class: 'spacing-right',
            data: {
                name: 'filter',
            },
        } only %}
        {{ 'customer.account.button.search_filters' | trans }}
    </button>

    {% include molecule('toggler-click') with {
        attributes: {
            'trigger-class-name': 'js-filter-button',
            'target-class-name': 'js-filter-section',
            'trigger-class-to-toggle': 'button--hollow-active',
        },
    } only %}
{% endblock %}

{% block customerContent %}
    {% include molecule('action-bar') with {
        data: {
            title: 'ssp_file_management.file_management' | trans,
            actions: [
                {
                    block: block('filtersToggler',)
                },
            ],
        },
    } only %}

    {{ block('formStart') }}
    {{ block('filtersSection') }}
    {{ block('activeFilters') }}
    {{ block('files') }}
    {{ block('formEnd') }}
{% endblock %}

{% block table %}
    {% set rows = rows | map(row => row | merge({
        actions: row.actions | map(action => action | merge({
            iconModifier: 'big',
            icon: 'download',
            title: action.label,
        })),
    })) %}

    {{ parent() }}
{% endblock %}

{% block filters %}
    {% include molecule('filters', 'FeatureUi') with {
        class: 'box box--small js-filter-section spacing-bottom--bigger',
        data: {
            filters: filters | map(_filter => _filter | merge({
                attr: {
                    class: "#{jsPrefix}#{ _filter.row.vars.name}-target",
                }
            })),
        },
    } only %}
{% endblock %}
