{% extends molecule('ssp-inquiry-table', '@SprykerFeature:SspInquiryManagement') %}

{% block table %}
    {% set rows = rows | map(row => row | merge({
        actions: [{
            url: path('customer/ssp-inquiry/details', { reference: row.reference }),
            title: 'customer.ssp_inquiry.view_ssp_inquiry',
            icon: 'eye',
            iconModifier: 'big',
        }]
    })) %}

    {% include molecule('advanced-table', 'SspInquiryManagement') with {
        data: {
            columns: columns,
            rows: rows,
            emptyText: 'customer.account.no_ssp_inquiries',
            sortableForm: data.sspInquirySearchForm,
            sortableFormClass: data.formClass,
        },
        qa: 'web-table-ssp-inquiries',
    } only %}
{% endblock %}
