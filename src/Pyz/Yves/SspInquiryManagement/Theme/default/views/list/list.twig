{% extends view('list', '@SprykerFeature:SspInquiryManagement') %}

{% block filtersToggler %}
    <button class="button button--hollow button--hollow-active button--justify-center js-filter-button">
        {% include atom('icon') with {
            modifiers: ['filter'],
            class: 'spacing-right',
            data: {
                name: 'filter',
            },
        } only %}
        {{ 'customer.account.button.filters' | trans }}
    </button>

    {% include molecule('toggler-click') with {
        attributes: {
            'trigger-class-name': 'js-filter-button',
            'target-class-name': 'js-filter-section',
            'trigger-class-to-toggle': 'button--hollow-active',
        },
    } only %}
{% endblock %}

{% block customerContent %}
    {% if can('CreateSspInquiryPermissionPlugin') %}
        {% include molecule('action-bar') with {
            modifiers: ['first'],
            data: {
                title: 'customer.account.ssp_inquiries' | trans,
                actions: [
                    {
                        block: block('filtersToggler'),
                    },
                    {
                        title: 'customer.ssp_inquiry.create.button' | trans,
                        url: url('customer/ssp-inquiry/create'),
                        primary: true,
                        qa: 'create-general-ssp-inquiry'
                    },
                ],
            },
        } only %}
    {% endif %}

    {% block list %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

{% block table %}
    {% set rows = rows | map(row => row | merge({
        actions: row.actions | map(action => action | merge({
            iconModifier: 'big',
            icon: 'eye',
            title: action.label,
        })),
    })) %}

    {{ parent() }}
{% endblock %}

{% block filters %}
    {% include molecule('filters', 'FeatureUi') with {
        class: 'is-hidden box box--small js-filter-section spacing-bottom--bigger',
        data: {
            filters: filters,
        },
    } only %}
{% endblock %}
