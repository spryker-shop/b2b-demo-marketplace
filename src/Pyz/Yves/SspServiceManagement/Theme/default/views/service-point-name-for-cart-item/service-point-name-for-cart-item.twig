{% extends view('service-point-name-for-cart-item', '@SprykerFeature:SspServiceManagement') %}

{% block body %}
    <div class="title--h6">
        <strong>{{ 'ssp_service_management.cart_item.service_point.name' | trans }}</strong>:

        {% block serviceName %}
            {{ data.servicePointName }}
        {% endblock %}
    </div>

    {% if data.scheduledAt %}
        <div class="title--h6 spacing-bottom--big"><strong>{{ 'ssp_service_management.cart_item.scheduled_at' | trans }}</strong>: {{ data.scheduledAt | formatDateTime }}</div>
    {% endif %}
{% endblock %}
