{% extends template('widget') %}

{% define data = {
    isActivePage: _widget.isActivePage,
    isVisible: _widget.isVisible,
} %}

{% set itemClass = data.isActivePage ? ' menu__item--active' : '' %}

{% block body %}
    {% if data.isVisible %}
        <li class="menu__item {{ itemClass }}">
            <a href="{{ url('customer/ssp-service') }}" data-id="sidebar-ssp-services">{{ 'ssp_service_management.list.widget.title' | trans }}</a>
        </li>
    {% endif %}
{% endblock %}
