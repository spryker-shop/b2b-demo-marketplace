<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\TenantOnboarding\Persistence" package="src.Orm.Zed.TenantOnboarding.Persistence">

    <table name="pyz_tenant" idMethod="native" identifierQuoting="true">
        <column name="id_tenant" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="identifier" type="VARCHAR" size="255" required="true"/>
        <column name="tenant_host" type="VARCHAR" size="255" required="true"/>
        <column name="merchant_portal_host" type="VARCHAR" size="255" required="true"/>

        <index name="pyz_tenant-identifier">
            <index-column name="identifier"/>
        </index>

        <index name="pyz_tenant-tenant_host">
            <index-column name="tenant_host"/>
        </index>

        <index name="pyz_tenant-merchant_portal_host">
            <index-column name="merchant_portal_host"/>
        </index>

        <behavior name="synchronization">
            <parameter name="resource" value="tenant"/>
            <parameter name="key_suffix_column" value="tenant_host"/>
            <parameter name="queue_group" value="sync.storage.tenant"/>
            <parameter name="queue_pool" value="synchronizationPool"/>
        </behavior>

        <behavior name="timestampable"/>

        <id-method-parameter value="pyz_tenant_pk_seq"/>
    </table>

</database>
