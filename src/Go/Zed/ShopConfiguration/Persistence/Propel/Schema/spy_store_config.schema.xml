<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\TenantOnboarding\Persistence" package="src.Orm.Zed.TenantOnboarding.Persistence">

    <table name="spy_store_config" idMethod="native" identifierQuoting="true">
        <column name="id_store_config" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="tenant_identifier" type="VARCHAR" size="255" required="true"/>

        <behavior name="synchronization">
            <parameter name="resource" value="store_config"/>
            <parameter name="key_suffix_column" value="tenant_identifier"/>
            <parameter name="store" required="true"/>
            <parameter name="queue_group" value="sync.storage.tenant"/>
        </behavior>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_store_config_pk_seq"/>
    </table>

</database>
